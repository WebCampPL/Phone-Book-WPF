<Window x:Class="PhoneBook.AddContactWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhoneBook"
        mc:Ignorable="d"
        Title="Nowy kontakt"  Height="240" Width="480">
    <StackPanel>
        <Label Content="Imię:" />
        <TextBox x:Name="FirstNameTextBox"/>
        <Label Content="Nazwisko:" Margin="0,8,0,0"/>
        <TextBox x:Name="SecondNameTextBox"/>
        <Label Content="Numer telefonu:" Margin="0,8,0,0"/>
        <TextBox x:Name="PhoneNumberTextBox" />
        <Button Content="Zatwierdź" Height="32" Margin="0,16,0,0" Click="AddContact"/>
    </StackPanel>
</Window>
